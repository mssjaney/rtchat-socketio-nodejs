      "resolveJsonModule": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "outDir": "dist",
      "esModuleInterop": true,
    },
    "include": [
      "src/**/*.ts",
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
}